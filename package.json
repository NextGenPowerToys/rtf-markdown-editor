{
  "name": "rtf-markdown-editor",
  "displayName": "RTF Markdown Editor",
  "description": "Word-like WYSIWYG Markdown Editor (RTL-first, Azure DevOps Mermaid, Autosave, FULLY OFFLINE)",
  "version": "1.1.7",
  "publisher": "NGPowerToys",
  "icon": "media/icons/RTFMD.png",
  "keywords": [
    "markdown",
    "editor",
    "editors",
    "wysiwyg",
    "rtl",
    "hebrew",
    "arabic",
    "mermaid",
    "diagrams",
    "export",
    "html",
    "offline",
    "autosave",
    "word-like",
    "rich-text",
    "github",
    "azure-devops",
    "rfc-7763"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NextGenPowerToys/rtf-markdown-editor"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Notebooks",
    "Formatters",
    "Visualization"
  ],
  "activationEvents": [
    "onCustomEditor:rtf-markdown-editor.editor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "rtf-markdown-editor.editor",
        "displayName": "RTF Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "rtf-markdown-editor.openEditor",
          "when": "resourceExtname == .md || resourceExtname == .markdown",
          "group": "1_modification"
        }
      ]
    },
    "commands": [
      {
        "command": "rtf-markdown-editor.openEditor",
        "title": "Edit with RTF Markdown Editor",
        "category": "RTF Markdown"
      }
    ],
    "configuration": {
      "title": "RTF Markdown Editor",
      "properties": {
        "rtf-markdown-editor.defaultCharset": {
          "type": "string",
          "default": "UTF-8",
          "enum": [
            "UTF-8",
            "UTF-16LE",
            "UTF-16BE",
            "ISO-8859-1",
            "Windows-1252"
          ],
          "enumDescriptions": [
            "Unicode UTF-8 (recommended, universal)",
            "Unicode UTF-16 Little Endian",
            "Unicode UTF-16 Big Endian",
            "Latin-1 (Western European)",
            "Windows Latin-1 (Western European with extensions)"
          ],
          "description": "Default character encoding for new markdown files (RFC 7763 charset parameter)"
        },
        "rtf-markdown-editor.defaultVariant": {
          "type": "string",
          "default": "GFM",
          "enum": [
            "Original",
            "CommonMark",
            "GFM",
            "MultiMarkdown"
          ],
          "enumDescriptions": [
            "Original Markdown (Gruber 2004)",
            "CommonMark (standardized specification)",
            "GitHub-Flavored Markdown (GFM) - recommended",
            "MultiMarkdown (extended features)"
          ],
          "description": "Default markdown variant/flavor (RFC 7763 variant parameter)"
        },
        "rtf-markdown-editor.detectCharsetAutomatically": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect file encoding when opening files"
        },
        "rtf-markdown-editor.showCharsetInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show character encoding in status bar"
        },
        "rtf-markdown-editor.showVariantInStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Show markdown variant in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run copy:mermaid && npm run esbuild-base -- --minify",
    "copy:mermaid": "node -e \"require('fs').copyFileSync('node_modules/mermaid/dist/mermaid.min.js', 'media/mermaid.min.js')\"",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "build:webview": "esbuild ./media/editor.ts --bundle --outfile=media/editor.bundle.js --format=iife --sourcemap",
    "build:webview-watch": "npm run build:webview -- --watch",
    "build": "npm run copy:mermaid && npm run esbuild && npm run build:webview",
    "watch": "concurrently \"npm run esbuild-watch\" \"npm run build:webview-watch\"",
    "compile": "tsc -p ./",
    "test": "jest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tiptap/core": "^2.1.0",
    "@tiptap/extension-bold": "^2.1.0",
    "@tiptap/extension-bullet-list": "^2.1.0",
    "@tiptap/extension-code": "^2.1.0",
    "@tiptap/extension-code-block": "^2.1.0",
    "@tiptap/extension-color": "^2.1.0",
    "@tiptap/extension-document": "^2.1.0",
    "@tiptap/extension-heading": "^2.1.0",
    "@tiptap/extension-highlight": "^2.1.0",
    "@tiptap/extension-history": "^2.1.0",
    "@tiptap/extension-horizontal-rule": "^2.1.0",
    "@tiptap/extension-image": "^2.1.0",
    "@tiptap/extension-italic": "^2.1.0",
    "@tiptap/extension-link": "^2.1.0",
    "@tiptap/extension-list-item": "^2.1.0",
    "@tiptap/extension-ordered-list": "^2.1.0",
    "@tiptap/extension-paragraph": "^2.1.0",
    "@tiptap/extension-placeholder": "^2.1.0",
    "@tiptap/extension-strike": "^2.1.0",
    "@tiptap/extension-table": "^2.1.0",
    "@tiptap/extension-table-cell": "^2.1.0",
    "@tiptap/extension-table-header": "^2.1.0",
    "@tiptap/extension-table-row": "^2.1.0",
    "@tiptap/extension-text": "^2.1.0",
    "@tiptap/extension-text-align": "^2.1.0",
    "@tiptap/extension-underline": "^2.1.0",
    "@tiptap/pm": "^2.1.0",
    "@tiptap/starter-kit": "^2.1.0",
    "markdown-it": "^13.0.0",
    "markdown-it-front-matter": "^0.2.4",
    "mermaid": "^10.6.0",
    "chardet": "^1.6.0",
    "iconv-lite": "^0.6.3",
    "he": "^1.2.0"
  }
}